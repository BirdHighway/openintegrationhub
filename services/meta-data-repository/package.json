{
  "name": "meta-data-repository",
  "version": "0.0.2",
  "description": "TBD",
  "main": "index.js",
  "author": "Basaas GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "start": "node src/index.js",
    "build": "echo \"No Build defined\"",
    "test": "jest",
    "watch": "nodemon src/index.js",
    "coverage": "yarn test --coverage",
    "build:docker": "docker build -t openintegrationhub/meta-data-repository:${VERSION} -f Dockerfile ."
  },
  "dependencies": {
    "@basaas/node-logger": "1.1.2",
    "@openintegrationhub/iam-utils": "1.3.0",
    "dotenv": "6.2.0",
    "express": "4.16.4",
    "moment": "2.24.0",
    "mongoose": "5.4.11",
    "morgan": "1.9.1",
    "qs": "6.6.0",
    "request": "2.88.0",
    "swagger-ui-express": "^4.0.2"
  },
  "devDependencies": {
    "eslint": "5.13.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jest": "22.2.2",
    "get-port": "4.1.0",
    "jest": "24.1.0",
    "mongodb": "3.1.13",
    "mongodb-memory-server": "3.0.0",
    "nodemon": "1.18.10",
    "supertest": "3.4.2"
  },
  "jest": {
    "globalSetup": "./src/test/setup.js",
    "globalTeardown": "./src/test/teardown.js",
    "testEnvironment": "./src/test/mongo-environment.js",
    "setupFilesAfterEnv": [
      "./src/test/jest.setup.js"
    ],
    "silent": false,
    "verbose": true
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "js": "node --harmony"
    },
    "events": {
      "restart": ""
    },
    "watch": [
      "src/",
      "doc/"
    ],
    "ext": "js json yaml"
  }
}
