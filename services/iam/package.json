{
  "name": "oih-iam-service",
  "version": "1.0.0",
  "description": "Identity and Access Management Service",
  "main": "index.js",
  "scripts": {
    "watch": "npm run watch-scss & nodemon src/index.js --watch ./ ",
    "watch-scss": "npm run build-css -- --watch",
    "watch-test": "jest --watch --runInBand",
    "start": "node src/index.js",
    "build-css": "node-sass-chokidar ./src/views/style -o ./src/views/style",
    "lint": "eslint --fix src/",
    "task": "node",
    "generate-keystore": "node -e 'require(\"./src/oidc/util/generate-keystore\").generateFile()'",
    "generate-nodemon-env": "node -e 'require(\"./src/util/nodemon-env\").saveToFile()'",
    "test": "jest --runInBand --forceExit ",
    "coverage": "jest --runInBand --coverage --forceExit ",
    "postinstall": "node ./src/app/dev/generateKeys.js"
  },
  "keywords": [
    "OIDC",
    "OAuth2",
    "JWT",
    "Authentication"
  ],
  "license": "Apache 2.0",
  "repository": "https://github.com/openintegrationhub/openintegrationhub/iam",
  "author": "Basaas GmbH",
  "dependencies": {
    "@basaas/node-logger": "^1.1.1",
    "base64-url": "^2.2.0",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "connect-mongo": "^2.0.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "favicon-url": "0.0.5",
    "jsonwebtoken": "^8.2.2",
    "lodash": "^4.17.10",
    "memwatch-next": "^0.3.0",
    "moment": "^2.22.2",
    "mongodb": "^3.0.10",
    "mongoose": "^5.1.4",
    "node-jose": "^0.11.0",
    "oidc-provider": "^4.0.2",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local-mongoose": "^5.0.0",
    "pug": "^2.0.3",
    "querystring": "^0.2.0",
    "request-promise": "^4.2.2",
    "swagger-ui-express": "^3.0.8"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jasmine": "^2.10.1",
    "eslint-plugin-jest": "^21.17.0",
    "jest": "^22.4.4",
    "mockgoose": "^7.3.5",
    "node-forge": "0.7.5",
    "node-sass-chokidar": "^1.3.0",
    "nodemon": "^1.17.5",
    "supertest": "^3.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  }
}
